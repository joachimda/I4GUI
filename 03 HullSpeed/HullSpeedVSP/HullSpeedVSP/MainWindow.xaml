<Window x:Class="HullSpeedVSP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HullSpeedVSP"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525"
        WindowState="Maximized">
    <Grid>
        <Button Click="ButtonBase_OnClick" HorizontalAlignment="Center" VerticalAlignment="Top">
            <Button.Template>
                <ControlTemplate>
                    <Image Source="man.jpg"/>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Label Content="Click the man!" VerticalAlignment="Top" HorizontalAlignment="Left"/>
    </Grid>
</Window>
